<div>
  <div>
    <h2><%= @post.title %> <span>by: <%= @post.author.name %></span></h2>
    <p>Comments: <%= @post.comments_count %>, Likes: <%= @post.likes_count %></p>
  </div>
  <p><%= @post.text %></p>
</div>
<div>
  <% @post.comments.each do |comment| %>
    <p> <%= comment.author.name %> <%= comment.text %></p>
  <% end %>
</div>